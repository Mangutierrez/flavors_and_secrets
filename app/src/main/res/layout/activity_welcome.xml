<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewWelcome"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/welcome_image" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Â¡BIENVENIDO!"
        android:fontFamily="@font/sedan"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewWelcomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sedan_regular"
        android:layout_marginTop="8dp"
        android:text="Descubre las mejores recetas en un solo lugar."
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:fontFamily="@font/sedan_regular"
        android:text="INICIAR"
        app:cornerRadius="8dp" />

</LinearLayout>
